<div class="card card-body p-4 rounded-0 bg-dark text-white">
    <h1>Student</h1>
    <form action="/student/add" method="POST"> 

<div>
    <label for="name">
        Name: 
    </label>
    <input type="text" name="name" placeholder="Name" id="name" class="form-control bg-dark text-white"/>
</div>
<div>
    <label for="lastName">
        LastName:  
    </label>
    <input type="text" name="lastName" placeholder="LastName" id="lastName" class="form-control bg-dark text-white"/>
</div>
<div>
    <label for="mothersLastName">
        MothersLastName: 
    </label>
    <input type="text" name="mothersLastName" placeholder="MothersLastName" id="mothersLastName" class="form-control bg-dark text-white"/>
</div>
<div>
    <label for="birthDate">
        BirthDate:  
    </label>
    <input type="date" name="birthDate" placeholder="BirthDate" id="birthDate" class="form-control bg-dark text-white"/>
</div>
<div>
    <label for="gender">
        Gender:  
    </label>
    <input type="text" name="gender" placeholder="Gender" id="gender" class="form-control bg-dark text-white"/>
</div>
<div>
    <label for="phoneNumber">
        PhoneNumber:  
    </label>
    <input type="text" name="phoneNumber" placeholder="PhoneNumber" id="phoneNumber" class="form-control bg-dark text-white"/>
</div>
<div>
    <label for="address">
        Address:  
    </label>
    <input type="text" name="address" placeholder="Address" id="address" class="form-control bg-dark text-white"/>
</div>

<button class="btn btn-success btn-sm mt-2">Add</button>
</form>
</div>