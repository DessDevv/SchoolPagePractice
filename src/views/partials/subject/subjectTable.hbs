{{#if subject}}
<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr class="text-center">
            <th>Num.</th>
            <th>Name</th>
            <th>Credits</th>
            <th>Hours</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each subject}}
        <tr>
            <td>{{@index}}</td>
            <td>{{name}}</td>
            <td>{{credits}}</td>
            <td>{{hours}}</td>
            <td>
                {{#if opcion}}
                <a href="/status-subject/{{_id}}" class="btn btn-warning">No disponible</a>
                {{else}}
                <a href="/status-subject/{{_id}}" class="btn btn-success">Disponible</a>
                {{/if}}
                <a href="/update-subject/{{_id}}" class="btn btn-info">Update</a>
                <a href="/delete-subject/{{_id}}" class="btn btn-danger">Delete</a>
                
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="text-center text-white">
    <h1>There aren't subjects</h1>
    <img src="https://freepngimg.com/thumb/folder/36792-3-folders-file.png" class="w-75"/>
</div>
{{/if}}